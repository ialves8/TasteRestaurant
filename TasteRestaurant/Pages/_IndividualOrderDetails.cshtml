@model TasteRestaurant.ViewModel.OrderDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="col-sm-5">
    Número do pedido: @Model.OrderHeader.Id
    <ul>
        @foreach (var orderDetail in Model.OrderDetail)
        {
            <li>@orderDetail.Name x @orderDetail.Count</li>
        }
    </ul>
</div>
<div class="col-sm-5">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2">
            Valor total: 
        </div>
        <div class="col-sm-6">
            R$ @Model.OrderHeader.OrderTotal
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2">
            Hora de retirada:
        </div>
        <div class="col-sm-6">
            @Model.OrderHeader.OrderDate.ToShortDateString() &nbsp; @Model.OrderHeader.PickUpTime.ToShortTimeString()
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2">
            Situação do pedido :
        </div>
        <div class="col-sm-6">
            @Model.OrderHeader.Status
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2">
            Comentários :
        </div>
        <div class="col-sm-6">
            @Model.OrderHeader.Comments
        </div>
    </div>
</div>
<div class="col-sm-2"></div>